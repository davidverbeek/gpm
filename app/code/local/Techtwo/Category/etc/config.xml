<?xml version="1.0"?>
<config>
    <modules>
        <Techtwo_Category>
            <version>0.3.0</version>
        </Techtwo_Category>
    </modules>
    <global>
        <rewrite>
            <techtwo_category_list>
                <from><![CDATA[#^/category/list#]]></from>
                <to>/category/index</to>
            </techtwo_category_list>
            <techtwo_category_alle-producten>
                <from><![CDATA[#^/alle-producten#]]></from>
                <to>/category/index</to>
            </techtwo_category_alle-producten>
        </rewrite>
        <resources>
            <techtwo_category_setup>
                <setup>
                    <module>Techtwo_Category</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </techtwo_category_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <category>
                <use>standard</use>
                <args>
                    <module>Techtwo_Category</module>
                    <frontName>category</frontName>
                </args>
            </category>
        </routers>
        <layout>
            <updates>
                <category>
                    <file>category.xml</file>
                </category>
            </updates>
        </layout>
    </frontend>
</config>
