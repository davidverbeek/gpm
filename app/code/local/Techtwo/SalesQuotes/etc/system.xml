<config>    
    <sections>
        <techtwo_salesquotes translate="label" module="techtwo_salesquotes">
            <label>Quotes</label>
            <tab>sales</tab>          
            <sort_order>301</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <quotes_settings translate="label">
                    <label>Quotes settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>9</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>                       
                        <customer_group translate="label">
                            <label>Customer Groups Quote Only Option</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>techtwo_salesquotes/adminhtml_system_config_source_customer_group</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customer_group>
                        <notification_email translate="label">
                            <label>Send Notification Email To</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notification_email>
                    </fields>
                </quotes_settings>               
            </groups>
        </techtwo_salesquotes>
