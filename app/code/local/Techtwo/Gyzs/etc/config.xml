<?xml version="1.0"?>
<config>
    <modules>
        <Techtwo_Gyzs>
            <version>1.3.0</version>
        </Techtwo_Gyzs>
    </modules>
    <global>
        <models>
            <gyzs>
                <class>Techtwo_Gyzs_Model</class>
            </gyzs>
            <catalogsearch_mysql4>
                <rewrite>
                    <fulltext>Techtwo_Gyzs_Model_Mysql4_Fulltext</fulltext>
                </rewrite>
            </catalogsearch_mysql4>
        </models>
		<helpers>
			<gyzs>
				<class>Techtwo_Gyzs_Helper</class>
			</gyzs>
		</helpers>
        <blocks>
            <techtwo_gyzs>
                <class>Techtwo_Gyzs_Block</class>
            </techtwo_gyzs>
            <adminhtml>
                <rewrite>
                    <catalog_product_grid>Techtwo_Gyzs_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
                    <sales_order_grid>Techtwo_Gyzs_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <resources>
            <techtwo_gyzs_setup>
                <setup>
                    <module>Techtwo_Gyzs</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </techtwo_gyzs_setup>
        </resources>
        <!-- not working
        <sales>
            <order_invoice>
                <totals>
                    <costs>
                        <class>techtwo_gyzs/order_invoice_total_cost</class>
                    </costs>
                </totals>
            </order_invoice>
        </sales>
        -->
    </global>
	<admin>
        <routers>
			   <gyzs>
				<use>admin</use>
				<args>
				 <module>Techtwo_Gyzs</module>
				 <frontName>admin_gyzs</frontName>
				</args>
			   </gyzs>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Techtwo_Gyzs>
                    <files>
                        <default>Techtwo_Gyzs.csv</default>
                    </files>
                </Techtwo_Gyzs>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Techtwo_Gyzs>
                    <files>
                        <default>Techtwo_Gyzs.csv</default>
                    </files>
                </Techtwo_Gyzs>
            </modules>
        </translate>
    </frontend>
</config>
