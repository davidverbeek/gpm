<?xml version="1.0"?>
<config>
    <sections>
        <effectconnect_options  translate="label" module="common">            
            <groups>
                <order translate="label"> 
                     <fields>
                        <order_comment translate="label">
                            <label>Order Comment</label>
                            <comment>This comment will added in all orders.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </order_comment>
                 </fields>
             </order>
            </groups>
        </effectconnect_options>

        <newsletter translate="label" module="newsletter">
            <groups>
                <subscription translate="label">
                    <fields>
                        <disablenewslettersuccesses translate="label">
                            <label>Disable the Newsletter Subscription email's success</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Disables emails send when Customer Subscribe or Unsubscribe to the Newsletter.</comment>
                        </disablenewslettersuccesses>
                    </fields>
                </subscription>
            </groups>
        </newsletter>

        <debterpricesconfiguration translate="label" module="common">
            <label>Debter Prices Configuration</label>
            <tab>helios</tab>
            <sort_order>1</sort_order>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <debterlist translate="label">
                    <label>Debter Prices Configuration</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <debternumbers translate="label">
                            <label>Debter Numbers(In CSV Format)</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>For e.g.
                                4027100,
                                4027101,
                                4027102,
                                4027103,
                                4027104,
                                4027105,
                                4027106,
                                4027107
                            </comment>
                        </debternumbers>
                    </fields>
                </debterlist>
            </groups>
        </debterpricesconfiguration>

        <sales_email translate="label" module="common">
            <groups>
                <manualproductorder translate="label">
                    <label>Manual Product Order</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <subject translate="label">
                            <label>Send Manual Product Email Subject</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </subject>
                        <name translate="label">
                            <label>Send Manual Product Email To Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </name>
                        <email translate="label">
                            <label>Send Manual Product Email To</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>separate by ","</comment>
                        </email>
                    </fields>
                </manualproductorder>
            </groups>
        </sales_email>
    </sections>
</config>
