$crumbs = $this->rewamp();
?>
<!-- breadcrumbs BOF -->
<?php if($crumbs && is_array($crumbs)): ?>
<div class="breadcrumbs">
	<div class="row clearfix">
		<ul itemscope itemtype="https://schema.org/BreadcrumbList">
			<?php foreach($crumbs as $_crumbName=>$_crumbInfo): ?>
				<?php if($_crumbInfo['link']): ?>
				<li class="<?php echo 'cat'.$_crumbName ?>" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
					<a itemtype="https://schema.org/Thing" itemprop="item" href="<?php echo $_crumbInfo['link'] ?>"><span itemprop="name"><?php echo $this->htmlEscape($_crumbInfo['label']) ?></span></a>
					<meta itemprop="position" content="<?php echo $_crumbName+1; ?>" />
				</li>
				<?php else: ?>
					<li class="<?php echo 'cat'.$_crumbName ?>" >
						<strong><?php echo $this->htmlEscape($_crumbInfo['label']) ?></strong>
					</li>
				<?php endif; ?>
			<?php endforeach; ?>
		</ul>
	</div>
</div>
<?php endif; ?>
<!-- breadcrumbs EOF -->