/**
 * Shopping cart template
 *
 * @see Mage_Checkout_Block_Cart
 */

?>
    <div class="fluid-wrap multy-step">
        <div class="row chckoutsteps">
            <ul class="checkout-progress" id="checkout-progress-state">
                <?php $i = 1;
                $steps = $this->getSteps();
                unset($steps['cartitem']);
                ?>
                <?php foreach ($steps as $key => $_step):  //echo "<pre>".$key; print_r($_step->getData()); ?>

                    <?php $complete = Mage::getSingleton('multistepcheckout/type_state')->getCompleteStep($key); ?>
                    <?php if ($complete): ?>
                        <li title="<?php echo $_step->getLabel() ?>"
                            class="step-<?php echo $i ?> <?php if ($_step->getIsActive()): ?> active <?php endif; ?><?php if ($complete): ?> complete <?php endif; ?> ">
                            <span><a href="<?php echo $_step->getUrl(); ?>"><?php if ($i < 5) {
                                        echo $i . '. ';
                                    } ?><?php echo $_step->getLabel() ?></a></span>
                            <div class="formobile"><a href="<?php echo $_step->getUrl(); ?>"><?php echo $i; ?>.</a>
                            </div>
                        </li>
                    <?php else: ?>

                        <li title="<?php echo $_step->getLabel() ?>"
                            class="step-<?php echo $i ?> <?php if ($_step->getIsActive()): ?> active <?php endif; ?><?php if ($complete): ?> complete <?php endif; ?> ">
                            <span><?php if ($i < 5) {
                                    echo $i . '. ';
                                } ?><?php echo $_step->getLabel() ?></span>
                            <span class="formobile"><?php echo $i; ?>.</span>
                        </li>
                    <?php endif; ?>
                    <?php $i++; ?>
                <?php endforeach; ?>
            </ul>
        </div>
    </div>
    <script type="text/javascript">decorateGeneric($$('#checkout-progress-state li'), ['first', 'last']);</script>
