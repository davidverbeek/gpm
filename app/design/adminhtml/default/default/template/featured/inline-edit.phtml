        var newSpecialToDate = $$(".special-todate-"+fieldId)[0].value;
        var newLabel = $$(".label-"+fieldId)[0].value;


        new Ajax.Request('<?php echo Mage::helper('adminhtml')->getUrl('*/*/updateRow') ?>', {
