<script type="text/javascript">
    function updateChange(button, fieldId)
    {
        new Ajax.Request('<?php echo Mage::helper('adminhtml')->getUrl('*/*/updateChange') ?>', {
            method: 'post',
            parameters: { id: fieldId, price: $(button).previous('input').getValue() }
        });
    }
